
<head>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #10E0E0;
        }

        li {
            float: left;
        }

        li a {
            display: block;
            color: #FFFFFF;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover {
            background-color: #111;
        }

        .col {
            margin-top: 30px
        }

        .square_btn {
            position: relative;
            display: inline-block;
            font-weight: bold;
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 3px;
            padding-bottom: 3px;
            border-radius: 25px;
            text-decoration: none;
            color: #ffffff;
            background: #FBC734;
            transition: .4s;
            margin-left: 40%;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .square_btn:hover {
            background: #af8104;
            color: white;
        }

        img {
            max-width: 350px;
        }

        input[type=file] {
            padding: 10px;
        }

        label {
            margin-bottom: 1px;
        }

        .form-text text-muted {
            margin-top: 1px;
        }

    </style>

    <script type="text/javascript">
        var grossNo = document.getElementById("grossNo");
        var date = document.getElementById("date");
        var orsiNo = document.getElementById("orsiNo");
        var category = document.getElementById("category");
        var bName = document.getElementById("bName");
        var notes = document.getElementById("notes")
    </script>

</head>

<div>
    <ul>
        <li>
            <img src="https://www.taxumo.com/wp-content/uploads/2018/02/logo_for_aqua_bg.png" style="width: 50% ; padding-left: 20px; margin: 15px" />
        </li>
    </ul>
</div>


<form>
    <div class="col">
        <label for="grossAmount">Gross Amount</label>
        <input type="text" class="form-control"
               id="grossNo">
    </div>

    <div class="col">
        <label for="date">Date Paid</label>
        <input type="text" class="form-control" placeholder="mm/dd/yyyy"
               id="date">
    </div>

    <div class="col">
        <label for="orsi">OR/SI Number</label>
        <small id="emailHelp" class="form-text text-muted">Optional</small>
        <input type="text" class="form-control"
               id="orsiNo">
    </div>

    <div class="col">
        <label for="category">Category</label>
        <input type="text" class="form-control"
               id="category">
    </div>

    <div class="col">
        <label for="bName">Business Name</label>
        <small id="emailHelp" class="form-text text-muted">Optional</small>
        <input type="text" class="form-control"
               id="bName">
    </div>

    <div class="col">
        <label for="notes">Notes</label>
        <small id="emailHelp" class="form-text text-muted">Optional</small>
        <input type="text" class="form-control"
               id="notes">
    </div>

    <div class="col">
        <label for="notes">Upload Receipt</label>
        <small id="emailHelp" class="form-text text-muted">Optional</small>
        <input type="file" accept="image/*" onchange="loadFile(event)">
        <img id="output" />
    </div>

    <script>
        var loadFile = function (event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>

    <a href="@ViewBag.RedirectURISuccess" class="square_btn">Submit</a>


</form>

